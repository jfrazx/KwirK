{
  "compilerOptions": {
    "declaration": true,
    "baseUrl": "./src",
    "module": "commonjs",
    "target": "esnext",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "outDir": "build",
    "lib": ["esnext"],
    "typeRoots": ["node_modules/@types"],
    "experimentalDecorators": true,
    "paths": {
      "@kwirk/interfaces": ["./src/interfaces/"],
      "@kwirk/networks": ["./src/networks/"],
      "@kwirk/options": ["./src/options/"],
      "@kwirk/bot": ["./src/bot/"]
    }
  },
  "compileOnSave": false,
  "include": ["src"],
  "exclude": []
}
